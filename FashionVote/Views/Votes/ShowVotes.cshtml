@model FashionVote.Models.Show

@{
    ViewData["Title"] = "Votes for " + (Model?.ShowName ?? "Unknown Show");
}

<h1>Votes for @Model?.ShowName</h1>

@if (Model?.DesignerShows == null || !Model.DesignerShows.Any())
{
    <div class="alert alert-warning">No designers registered for this show.</div>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Designer</th>
                <th>Category</th>
                <th>Votes Received</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.DesignerVotes != null)
            {
                @foreach (FashionVote.Models.DTOs.DesignerVoteDTO dv in ViewBag.DesignerVotes)
                {
                    <tr>
                        <td>@dv.DesignerName</td>
                        <td>@dv.Category</td>
                        <td>@dv.VoteCount</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">
                        No votes have been recorded for this show.
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="AdminIndex" asp-controller="Shows" class="btn btn-secondary">Back to Manage Shows</a>

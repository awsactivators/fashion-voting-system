@model IEnumerable<FashionVote.Models.Show>
@{
    ViewData["Title"] = "Upcoming Shows";
}

<h1>Welcome to Fashion Voting System</h1>
<p>View our Upcoming Fashion shows, for you to be able to attend a show and vote your favorite designer during the show you will have to register or Login if you are a registered user, then register for a show.</p>

<h2>Upcoming Shows</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Show Name</th>
            <th>Location</th>
            <th>Start Time</th>
            <th>End Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var show in Model)
        {
            var currentTime = DateTime.UtcNow;
            bool isVotingOpen = currentTime >= show.StartTime && currentTime <= show.EndTime;

            <tr>
                <td>@show.ShowName</td>
                <td>@show.Location</td>
                <td>@show.StartTime.ToString("g")</td>
                <td>@show.EndTime.ToString("g")</td>
                <td>
                    @if (!User.Identity.IsAuthenticated)
                    {
                        <!-- âœ… Redirect Public Users to Login -->
                        <a asp-area="Identity" asp-page="/Account/Register"
                            asp-route-returnUrl="@Url.Action("Register", "Shows", new { showId = show.ShowId })"
                            class="btn btn-primary btn-sm">Register</a>
                    }
                    else if (User.IsInRole("Participant"))
                    {
                        @if (currentTime < show.StartTime)
                        {
                            <a asp-action="Register" asp-route-showId="@show.ShowId" class="btn btn-primary btn-sm">Register</a>
                        }
                        else if (currentTime > show.EndTime)
                        {
                            <span class="badge bg-danger">Voting Closed</span>
                        }
                        else
                        {
                            <a asp-action="Vote" asp-route-showId="@show.ShowId" class="btn btn-success btn-sm">Vote</a>
                        }
                    }
                    else if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Details" asp-route-id="@show.ShowId" class="btn btn-info btn-sm">View</a>
                        <a asp-action="Edit" asp-route-id="@show.ShowId" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@show.ShowId" class="btn btn-danger btn-sm">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Add Show</a>
    </p>
}

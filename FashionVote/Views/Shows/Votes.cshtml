@model FashionVote.Models.Show

@{
    ViewData["Title"] = "Votes for " + Model.ShowName;
}

<h1>Votes for @Model.ShowName</h1>

@if (!Model.Votes.Any())
{
    <p class="text-muted">No votes have been submitted yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Participant</th>
                <th>Designer Voted</th>
                <th>Vote Time</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vote in Model.Votes)
            {
                <tr>
                    <td>@vote.Participant.Name (@vote.Participant.Email)</td>
                    <td>@vote.Designer.Name (@vote.Designer.Category)</td>
                    <td>@vote.VotedAt.ToString("g")</td>
                </tr>
            }
        </tbody>
    </table>
}
<a asp-controller="Shows" asp-action="AdminIndex" class="btn btn-secondary">Back to Shows</a>

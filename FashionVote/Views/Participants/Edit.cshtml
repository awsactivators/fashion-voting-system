@model FashionVote.Models.Participant
@{
    ViewData["Title"] = "Edit Participant";
}

<h1>Edit Participant</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ParticipantId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="ShowId">Select Show</label>
        <select asp-for="ShowId" asp-items="ViewBag.Shows" class="form-control" required>
            <option value="">-- Select a Show --</option>
        </select>
        <span asp-validation-for="ShowId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@model FashionVote.Models.Participant
@{
    ViewData["Title"] = "Edit Participant";
}

<h1>Edit Participant</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ParticipantId" />

    <div class="form-group">
        <label for="Name">Name</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input asp-for="Email" type="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="SelectedShowIds">Select Shows</label>
        <select name="SelectedShowIds" asp-items="ViewBag.ShowList" multiple class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary save-changes">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

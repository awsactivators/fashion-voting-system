@model FashionVote.Models.Participant
@{
    ViewData["Title"] = "Delete Participant";
}

<h1>Delete Participant</h1>

<div>
    <h3>Are you sure you want to delete this participant?</h3>
    <div>
        <strong>Name:</strong> @Model.Name<br />
        <strong>Email:</strong> @Model.Email<br />
        <strong>Registered At:</strong> @Model.RegisteredAt.ToString("g")<br />
        <strong>Show:</strong> @Model.Show?.ShowName
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ParticipantId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@model IEnumerable<FashionVote.Models.Designer>
@{
    ViewData["Title"] = "Designers List";
}

<h1>Designers</h1>

<!-- ✅ Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="Create" class="btn btn-primary">Add Designer</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Shows Participating In</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var designer in Model)
        {
            <tr>
                <td>@designer.Name</td>
                <td>@designer.Category</td>

                <!-- ✅ Display Shows the Designer is Participating In -->
                <td>
                    @if (designer.DesignerShows != null && designer.DesignerShows.Any(ds => ds.Show != null))
                    {
                        <ul>
                            @foreach (var ds in designer.DesignerShows.Where(ds => ds.Show != null))
                            {
                                <li>@ds.Show.ShowName (@ds.Show.Location)</li>
                            }
                        </ul>
                    }
                    else
                    {
                        <span class="text-muted">No shows assigned</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@designer.DesignerId" class="btn btn-info btn-sm">View</a>
                    <a asp-action="Edit" asp-route-id="@designer.DesignerId" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@designer.DesignerId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

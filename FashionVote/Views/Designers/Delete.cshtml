@model FashionVote.Models.Designer

@{
    ViewData["Title"] = "Delete Designer";
}

<h1>Delete Designer</h1>

<div>
    <h3>Are you sure you want to delete this designer?</h3>
    <div>
        <strong>Name:</strong> @Model.Name<br />
        <strong>Category:</strong> @Model.Category<br />
        <strong>Created At:</strong> @Model.CreatedAt.ToString("g")
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="DesignerId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>

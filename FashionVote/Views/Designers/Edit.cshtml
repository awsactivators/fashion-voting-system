@model FashionVote.Models.DTOs.DesignerUpdateDTO

@{
    ViewData["Title"] = "Edit Designer";
}

<h1>Edit Designer</h1>

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<form asp-controller="Designers" asp-action="Edit" method="post">
    <input type="hidden" asp-for="DesignerId" />

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Category">Category</label>
        <input asp-for="Category" class="form-control" />
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Assign Shows</label>
        <select asp-for="SelectedShowIds" asp-items="ViewBag.ShowList" multiple class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary save-changes">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
